  <!---Profile page---->

  <section id="profile">
     <h2>Booking Details</h2 >
     <div class="container">
  <div class="container profile-container mt-4 ">
   {{#each result}}
      <div class="row profile">
        <div class="col-md-4 image">
          <div class="image-container">
            <span>Booking</span>
            <div class="img">
                <img src={{mahalimage}} alt="no-img">
            </div>
          </div>
        </div>
        <div class="col-md-8 details">
            <div class="detail-container">
                <table>
                    <tbody>
                        <tr>
                            <th>Fullname:</th>
                          <td> {{USERNAME}}</td> 
                        </tr>
                        <tr>
                            <th>E-mail:</th>
                            <td>{{EMAIL}}</td>
                        </tr>
                        <tr>
                            <th>Phone no:</th>
                            <td>{{PHONE_NO}}</td>
                        </tr>
                        <tr>
                            <th>Mahal Details:</th>
                            <td>
                                <p>{{mahalname}}</p>
                                <p>{{city}},{{distic}}</p>
                                <p>Date:{{BOOKING_DATE}}</p>
                                <p>contact:9942508582</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
      </div>
  
  {{/each}}
     


  </div>

</div>
  </section>







